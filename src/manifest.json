{

	"manifest_version": 2,

	"name": "Deezer Tab",
	"short_name": "Deezer Tab",
	"description": "Discover a Deezer Track every time you open a new tab.",

	"version": "2.0.4",
	"version_name": "Centered Build",

	"author": "Simon Duhem",

	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},

	"chrome_url_overrides": {
		"newtab": "index.html"
	},

	"permissions": [
		"https://api.deezer.com/*",
		"storage"
	],

	"content_security_policy": "script-src 'self'; object-src 'self'"

}